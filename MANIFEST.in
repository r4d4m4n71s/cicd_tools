# Include all project template files including hidden directories
recursive-include cicd_tools/project_templates *
recursive-include cicd_tools/project_templates/development_project/.github *

# Exclude unwanted directories
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .git
global-exclude .gitignore
global-exclude .DS_Store
prune tests
prune */tests
